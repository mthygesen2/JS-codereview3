<div class="newAnswer">
  {{#if addNewAnswer}}
    <h1>New Answer</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="Name">User Name</label>
          {{input value=answerUserName id="Name"}}
        </div>

        <div class="form-group">
          <label for="answerContent">Answer</label>
          {{input value=answerContent id="answerContent"}}
        </div>
        <button {{action 'save'}}>Save</button>
      </form>
    </div>
  {{else}}
    <button {{action 'answerFormShow'}}>Add an answer</button>
  {{/if}}
</div>
